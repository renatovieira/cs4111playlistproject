<div class="page-header">
  <% if is_admin? %>		
	  <%= link_to new_artist_path, class: 'btn btn-primary' do %>
	    <span class="glyphicon glyphicon-plus"></span>
	    New Artist
	  <% end %>
	<% end %>
  <h1>Listing artists</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Name</th>
            <th>Country</th>
			  <% if is_admin? %>		
	        <th></th>
	        <th></th>
				<% end %>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @artists) do |artist| %>
       	 		<td><%= link_to artist.name, artist %></td>
        		<td><%= Country.find(artist.country_id).name %></td>
			  <% if is_admin? %>				
	        <td><%= link_to 'Edit', edit_artist_path(artist) %></td>
	        <td><%= link_to 'Destroy', artist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
				<% end %>
      <% end %>
    </tbody>
  </table>
</div>