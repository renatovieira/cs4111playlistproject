<div class="page-header">
  <%= link_to genres_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
	<% if @is_admin %>
	  <%= link_to edit_genre_path(@genre), class: 'btn btn-primary' do %>
	    <span class="glyphicon glyphicon-pencil"></span>
	    Edit
	  <% end %>
	<% end %>
  <h1>Show genre</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @genre.name %></dd>

	<dt>Artists:</dt>
	<dd><ul>
		<% @genre.artists.each do |artist| %>
			<li>
    			<%= link_to artist.name, artist %>
			</li>
		<% end %>
	</ul></dd>

	<dt>Songs:</dt>
	<dd><ul>
		<% @genre.songs.each do |song| %>
			<li>
    			<%= link_to song.title, song %>
			</li>
		<% end %>
	</ul></dd>
</dl>
