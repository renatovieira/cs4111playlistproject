<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>First name</th>
      <th>Last name</th>
			<th>Followers</th>
			<th>Following</th>
			<th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.followers.size %></td>
        <td><%= user.following.size %></td>
				<td>
					<% if is_friend(user) %>
						Friends
					<% elsif user != @logged_in_user %>
						<% if is_follower(user) %>
							Follower
						<% end %>
						<% if is_following(user) %>
							Following
						<% else %>
							Follow
						<% end %>
					<% end %>
				</td>
	  		<% if @is_admin %>
        	<td><%= link_to 'Edit', edit_user_path(user) %></td>
        	<td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
				<% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if @is_admin %>
	<%= link_to 'New User', new_user_path %>
<% end %>