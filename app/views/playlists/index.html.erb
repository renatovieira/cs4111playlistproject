<p id="notice"><%= notice %></p>

<h1>Listing Playlists</h1>

<table>
  <thead>
    <tr>
    	<th>Name</th>
	  	<th>Created at</th>
	  	<th>Last update</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @playlists.each do |playlist| %>
			<% if playlist.is_public or @is_admin %>
      	<tr>
        	<td><%= link_to playlist.name, playlist %></td>
        	<td><%= playlist.created_at %></td>
        	<td><%= playlist.updated_at %></td>
	  			<% if @is_admin %>
        		<td><%= link_to 'Edit', edit_playlist_path(playlist) %></td>
        		<td><%= link_to 'Destroy', playlist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
					<% end %>	
      	</tr>
			<% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Playlist', new_playlist_path %>
