      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :song_id, :value => song_id %>

  <div class="form-group">
    <div class="col-sm-10">
			<%= f.collection_select(:playlist_id, current_user.playlists.sort_by {|obj| obj.name}, :id, :name)  %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Add to playlist", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
