<p id="notice"><%= notice %></p>

<h1>Listing Songs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Duration</th>
      <th>Url</th>
	  <th>Artist</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= song.title %></td>
        <td><%= song.duration %></td>
        <td><%= song.url %></td>
        <td><%= song.artists.join(',') %></td>
        <td><%= link_to 'Show', song %></td>
	  	<% if @is_admin %>
        	<td><%= link_to 'Edit', edit_song_path(song) %></td>
        	<td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		<% end %>	
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if @is_admin %>
	<%= link_to 'New Song', new_song_path %>
<% end %>
