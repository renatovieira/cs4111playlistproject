<%= form_for(@follow, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @follow.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@follow.errors.count, "error") %> prohibited this follow from being saved:</h4>

      <ul>
      <% @follow.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :follower_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :follower_id, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :following_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :following_id, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :since, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_select :since, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
